<%= form_tag(scheduler_path(params[:id]), method: "put") do %>
    <%= @scheduler.each do |k, v| %>
        <div class="form-group">
          <label class="col-lg-3 control-label" for="name"><%= k %></label>
          <div class="col-lg-7">
            <input class="form-control required" placeholder="<%= k %>" name="scheduler[<%= k %>]"
                   type="text" value="<%= v %>">
          </div>
        </div>

    <% end %>

    <div class="form-group">
      <div class="col-lg-12 text-center">
        <%= link_to "Cancel" %>
        <%= button_tag "Submit" %>
      </div>
    </div>
<% end %>

